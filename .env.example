# Docker Compose Configuration
# Copy this file to .env and customize as needed

# Downloads directory - IMPORTANT: Use absolute paths for Portainer
# Development (local): ./downloads
# Production/Portainer: /path/to/your/music/folder
HOST_DOWNLOADS_DIR=./downloads

# Port configuration
HOST_PORT=5000

# Flask configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Container settings
RESTART_POLICY=unless-stopped
HEALTHCHECK_DISABLE=false
PUID=1000
PGID=1000

# Login password (change this!)
LOGIN_PASSWORD=1234

# MusicBrainz User Agent
MUSICBRAINZ_USER_AGENT=QobuzSquidDownloader/1.0 ( your.email@example.com )

# AcoustID API Key (optional - for enhanced tagging)
ACOUSTID_API_KEY=YOUR_ACOUSTID_API_KEY_HERE

# Portainer Examples:
# For downloads to host directory: HOST_DOWNLOADS_DIR=/home/user/music
# For downloads to Docker volume: HOST_DOWNLOADS_DIR=music_volume
# For NAS/network storage: HOST_DOWNLOADS_DIR=/mnt/nas/music
